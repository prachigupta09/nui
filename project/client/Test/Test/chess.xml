<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" xml:lang="en-US"
         xmlns="http://www.w3.org/2001/06/grammar"
         tag-format="semantics/1.0" root="Main">

  <!-- chess.xml: 
    Defines an SRGS grammar for making a move in chess. This grammar 
    is based upon the standard algebraic notation for chess. It uses
    Piece names and board Positions to parse the user's spoken move.
    -->

  <rule id="Main">
    <one-of>
      
      <item>
        Move <ruleref uri="#Pieces"/> to <ruleref uri="#Positions"/>
      </item>
      
      <!--
      <item>Move <ruleref uri="#Pieces"/>
      to <ruleref uri="#Column"/>
        <ruleref uri="#Row"/>
      </item>
      -->
      
      
      
      <item>Surrender</item>
      <item>Hint</item>
    </one-of>
  </rule> 
  
  <rule id="Pieces" scope="public">
    <one-of>
      <item>King</item>
      <item>Queen</item>
      <item>Rook</item>
      <item>Bishop</item>
      <item>Knight</item>
      <item>Pawn</item>
    </one-of>
  </rule>
  
  <rule id="Column" scope="public">
    <one-of>
      <item>A</item>
      <item>B</item>
      <item>C</item>
      <item>D</item>
      <item>E</item>
      <item>F</item>
      <item>G</item>
      <item>H</item>
    </one-of>
  </rule>

  <rule id="Row" scope="public">
    <one-of>
      <item>1</item>
      <item>2</item>
      <item>3</item>
      <item>4</item>
      <item>5</item>
      <item>6</item>
      <item>7</item>
      <item>8</item>
    </one-of>
  </rule>
 
  <rule id="Positions" scope="public">
    <one-of>
      <item>A1</item>
      <item>A2</item>
      <item>A3</item>
      <item>A4</item>
      <item>A5</item>
      <item>A6</item>
      <item>A7</item>
      <item>A8</item>
      <item>B1</item>
      <item>B2</item>
      <item>B3</item>
      <item>B4</item>
      <item>B5</item>
      <item>B6</item>
      <item>B7</item>
      <item>B8</item>
      <item>C1</item>
      <item>C2</item>
      <item>C3</item>
      <item>C4</item>
      <item>C5</item>
      <item>C6</item>
      <item>C7</item>
      <item>C8</item>
      <item>D1</item>
      <item>D2</item>
      <item>D3</item>
      <item>D4</item>
      <item>D5</item>
      <item>D6</item>
      <item>D7</item>
      <item>D8</item>
      <item>E1</item>
      <item>E2</item>
      <item>E3</item>
      <item>E4</item>
      <item>E5</item>
      <item>E6</item>
      <item>E7</item>
      <item>E8</item>
      <item>F1</item>
      <item>F2</item>
      <item>F3</item>
      <item>F4</item>
      <item>F5</item>
      <item>F6</item>
      <item>F7</item>
      <item>F8</item>
      <item>G1</item>
      <item>G2</item>
      <item>G3</item>
      <item>G4</item>
      <item>G5</item>
      <item>G6</item>
      <item>G7</item>
      <item>G8</item>
      <item>H1</item>
      <item>H2</item>
      <item>H3</item>
      <item>H4</item>
      <item>H5</item>
      <item>H6</item>
      <item>H7</item>
      <item>H8</item>
    </one-of>
  </rule>
  
  
  
  
</grammar>